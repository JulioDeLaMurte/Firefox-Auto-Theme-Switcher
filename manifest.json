{
    "manifest_version": 2,
    "name": "Firefox Auto Theme Switcher",
    "version": "1.0",
    "description": "Automatically changes Firefox theme color based on the active URL",
    "permissions": [
        "tabs",
        "storage",
        "theme",
        "<all_urls>"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "type": "module"
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Auto Theme Switcher"
    },
    "options_ui": {
        "page": "options.html",
        "browser_style": true,
        "open_in_tab": true
    },
    "icons": {
        "128": "icons/icon-128.png"
    }
}