{
    "manifest_version": 2,
    "name": "Firefox Auto Theme Switcher",
    "version": "1.0",
    "description": "Automatically changes Firefox theme color based on the active URL",
    "permissions": [
        "tabs",
        "storage",
        "theme"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Auto Theme Switcher"
    },
    "options_ui": {
        "page": "options.html",
        "browser_style": true
    },
    "icons": {
        "48": "icons/icon-48.png",
        "96": "icons/icon-96.png"
    }
}